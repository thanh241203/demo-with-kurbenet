pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'ðŸ“¦ Cloning GitHub repository...'
                git branch: 'main', url: 'https://github.com/thanh241203/demo-with-kurbenet.git'
            }
        }
        stage('Build') {
            steps {
                // Run Maven build
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                // Run Maven tests
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                // Package the application (optional)
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline finished successfully! Image built and deployed.'
        }
    }
}
