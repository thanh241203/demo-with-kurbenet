pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK17'
    }
    stages {
        stage('Checkout') {
            steps {
                echo 'ðŸ“¦ Cloning GitHub repository...'
                git branch: 'main', url: 'https://github.com/thanh241203/demo-with-kurbenet.git'
            }
        }
        stage('Build') {
            steps {
                // Run Maven build
                dir('demo') {
                    bat 'mvn clean install'
                }
            }
        }
        stage('Test') {
            steps {
                // Run Maven tests
                dir('demo') {
                    bat 'mvn test'
                }
            }
        }
        stage('Package') {
            steps {
                dir('demo') {
                    bat 'mvn package'
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline finibated successfully! Image built and deployed.'
        }
    }
}
