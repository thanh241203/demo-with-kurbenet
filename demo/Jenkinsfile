pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'thanhkon241203265' // ten docker desktop c·ªßa ban
        DOCKERHUB_PASS = credentials('dockerhub-credentials-deploy') // id credential
        IMAGE_NAME = 'thanhkon241203265/docker-deploy' // ten image

        // C·∫•u h√¨nh Kubernetes
        K8S_CONFIG_CREDENTIALS_ID = 'kurbenet-config' // ID File Credential (kubeconfig)
        K8S_NAMESPACE = 'default'
        K8S_DEPLOYMENT_NAME = 'springboot-deploy' // T√™n ph·∫£i match v·ªõi metadata:name ·ªü deployment.yaml
    }
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK17'
    }
    stages {
        stage('Checkout') {
            steps {
                echo 'üì¶ Cloning GitHub repository...'
                git branch: 'main', url: 'https://github.com/thanh241203/demo-with-kurbenet.git'
            }
        }
        stage('Build') {
            steps {
                echo 'üî® Building the project...'
                dir('demo') {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('demo') {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        bat "docker build -t ${IMAGE_NAME}:${imageTag} ."
                        bat "docker tag ${IMAGE_NAME}:${imageTag} ${IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-deploy', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        bat """
                    echo Logging in to DockerHub...
                    echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                    docker push ${IMAGE_NAME}:${imageTag}
                    docker push ${IMAGE_NAME}:latest
                """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'üöÄ Deploying new image and ensuring Kubernetes resources are applied...'
                withCredentials([file(credentialsId: 'kurbenet-config', variable: 'KUBECONFIG_FILE')]) {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        def fullImage = "${env.IMAGE_NAME}:${imageTag}"

                        env.KUBECONFIG = KUBECONFIG_FILE
                        bat 'kubectl config current-context'
                        bat 'kubectl cluster-info'
                        bat "kubectl apply -f ${WORKSPACE}/demo/service.yaml -n ${env.K8S_NAMESPACE}"
                        bat "kubectl apply -f ${WORKSPACE}/demo/deployment.yaml -n ${env.K8S_NAMESPACE}"
                        bat 'kubectl get po -n default'
                        bat "kubectl set image deployment/${env.K8S_DEPLOYMENT_NAME} springboot=${fullImage} -n ${env.K8S_NAMESPACE}"

                        // Ch·ªù Rollout ho√†n t·∫•t
                        bat "kubectl rollout status deployment/${env.K8S_DEPLOYMENT_NAME} -n ${env.K8S_NAMESPACE}"

                        echo "Deployment ${env.K8S_DEPLOYMENT_NAME} updated with image: ${fullImage}"
                    }
                }
            }
        }
        stage('Test') {
            steps {
                // Run Maven tests
                dir('demo') {
                    bat 'mvn test'
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline finibated successfully! Image built and deployed.'
        }
    }
}
